<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/review_bg"
    android:foreground="@drawable/select_effect"
    android:elevation="5dp"
    android:layout_margin="10dp">
    <TextView
        android:id="@+id/basket_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가게 이름"
        android:textSize="18sp"
        android:textColor="@color/s_textBlack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/basket_item_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="치즈버거(2)\n불고기버거(1)"
        android:textSize="16sp"
        android:textColor="@color/s_textBlack"
        app:layout_constraintTop_toBottomOf="@+id/basket_item_title"
        app:layout_constraintStart_toStartOf="@+id/basket_item_title"
        android:layout_marginTop="14dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/basket_item_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/basket_item_list"
        app:layout_constraintStart_toStartOf="@+id/basket_item_list"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="삭제"
        android:textColor="@color/s_textBlack"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/basket_item_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24,500원"
        android:textColor="@color/s_textBlack"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/basket_item_delete_button"
        android:layout_marginEnd="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>