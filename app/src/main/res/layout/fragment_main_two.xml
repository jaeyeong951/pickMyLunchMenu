<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_two_toolbar"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="런치마켓"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/toolbar_basket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장바구니"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/s_textBlackSecondary"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="20dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/main_two_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한식"
        android:textSize="22sp"
        android:textColor="@color/s_textBlack"
        app:layout_constraintTop_toBottomOf="@+id/main_two_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="33dp"
        />
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/main_two_chip_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_two_title"
        app:singleSelection="true"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp">
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="즐겨찾기"
            android:textSize="12sp"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="거리순"
            android:textSize="12sp"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="리뷰많은순"
            android:textSize="12sp"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_abc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="가나다순"
            android:textSize="12sp"/>
    </com.google.android.material.chip.ChipGroup>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_two_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="12dp"
        android:layoutAnimation="@anim/layout_animation_fall_down"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_two_chip_group"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/restaurant_item" />
</androidx.constraintlayout.widget.ConstraintLayout>