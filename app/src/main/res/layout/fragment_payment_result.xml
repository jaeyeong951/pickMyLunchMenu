<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/payment_result_toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="런치마켓"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/payment_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="sendy님의 결제내역"
        android:textSize="22sp"
        android:textColor="@color/s_textBlack"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_result_toolbar"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/payment_result_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메뉴명"
        android:textSize="18sp"
        android:textColor="@color/s_textBlack"
        app:layout_constraintStart_toStartOf="@+id/payment_result_title"
        app:layout_constraintTop_toBottomOf="@+id/payment_result_title"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/payment_result_menu_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기장칼국수 외 1개"
        android:textSize="16sp"
        android:textColor="@color/s_textBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/payment_result_menu_title"
        app:layout_constraintBottom_toBottomOf="@+id/payment_result_menu_title"
        android:layout_marginEnd="20dp"/>
    <TextView
        android:id="@+id/payment_result_method_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결제정보"
        android:textSize="18sp"
        android:textColor="@color/s_textBlack"
        app:layout_constraintStart_toStartOf="@+id/payment_result_menu_title"
        app:layout_constraintTop_toBottomOf="@+id/payment_result_menu_title"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/payment_result_method_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카드결제"
        android:textSize="16sp"
        android:textColor="@color/s_textBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/payment_result_method_title"
        app:layout_constraintBottom_toBottomOf="@+id/payment_result_method_title"
        android:layout_marginEnd="20dp"/>
    <TextView
        android:id="@+id/payment_result_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결제금액"
        android:textSize="18sp"
        android:textColor="@color/s_textBlack"
        app:layout_constraintStart_toStartOf="@+id/payment_result_method_title"
        app:layout_constraintTop_toBottomOf="@+id/payment_result_method_title"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/payment_result_price_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50500원"
        android:textSize="16sp"
        android:textColor="@color/s_textBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/payment_result_price_title"
        app:layout_constraintBottom_toBottomOf="@+id/payment_result_price_title"
        android:layout_marginEnd="20dp"/>
    <TextView
        android:id="@+id/payment_result_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결제일"
        android:textSize="18sp"
        android:textColor="@color/s_textBlack"
        app:layout_constraintStart_toStartOf="@+id/payment_result_price_title"
        app:layout_constraintTop_toBottomOf="@+id/payment_result_price_title"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/payment_result_date_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021년 4월 5일"
        android:textSize="16sp"
        android:textAlignment="viewEnd"
        android:textColor="@color/s_textBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/payment_result_date_title"
        android:layout_marginEnd="20dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/payment_result_back_button"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="15dp"
        android:backgroundTint="@color/mov_red"
        android:text="메인으로 이동"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_result_date_desc"/>
</androidx.constraintlayout.widget.ConstraintLayout>