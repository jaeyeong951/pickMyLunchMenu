<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:background="@drawable/rupple"
    android:clickable="true"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/restaurant_image_container"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/restaurant" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/history_item_restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가게 이름"
        android:textColor="@color/s_textBlack"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/restaurant_image_container"
        app:layout_constraintTop_toTopOf="@+id/restaurant_image_container"
        android:layout_marginStart="12dp"/>
    <TextView
        android:id="@+id/history_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021년 3월 25일"
        android:textColor="@color/s_textBlackSecondary"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/restaurant_image_container"
        app:layout_constraintBottom_toBottomOf="@+id/restaurant_image_container"
        android:layout_marginStart="12dp"/>
    <RatingBar
        android:id="@+id/history_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:progressTint="@color/star_yelloow"
        android:rating="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/restaurant_image_container"
        android:layout_marginEnd="16dp"/>
    <ImageView
        android:id="@+id/history_my_comment_mark"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@drawable/ic_left_quote"
        app:layout_constraintStart_toStartOf="@+id/restaurant_image_container"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_image_container"
        android:layout_marginTop="16dp"
        android:layout_marginStart="5dp"/>
    <TextView
        android:id="@+id/history_my_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="너무너무너무 맛이 없었다."
        android:textSize="17sp"
        android:textColor="@color/s_textBlack"
        app:layout_constraintTop_toTopOf="@+id/history_my_comment_mark"
        app:layout_constraintStart_toEndOf="@+id/history_my_comment_mark"
        app:layout_constraintEnd_toEndOf="@+id/history_star"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>