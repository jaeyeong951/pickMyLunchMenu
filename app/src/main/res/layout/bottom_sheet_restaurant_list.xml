<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/bottom_sheet"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_half_round"
    android:elevation="10dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="150dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/bottom_sheet_restaurant_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/s_textBlack"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="근처 128개의 식당" />

    <TextView
        android:id="@+id/bottom_sheet_restaurant_list_title_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/s_textBlackSecondary"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_restaurant_list_title"
        tools:text="총 2321개의 리뷰" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bottom_sheet_restaurant_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="12dp"
        android:layoutAnimation="@anim/layout_animation_fall_down"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_restaurant_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_restaurant_list_title_sub"
        tools:listitem="@layout/restaurant_item" />
    <ImageView
        android:id="@+id/bottom_sheet_restaurant_refresh_button"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/button_grey_round"
        android:src="@drawable/ic_refresh_24"
        android:padding="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_sheet_restaurant_list_title_sub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottom_sheet_restaurant_list_title" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottom_sheet_restaurant_button"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:backgroundTint="@color/mov_red"
        android:text="추천"
        app:cornerRadius="8dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginHorizontal="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_restaurant_list_recycler_view"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>